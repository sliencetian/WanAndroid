/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.pageRoot {
  width: 100%;
  height: 100%;
  background-color: #303030;
}

.liststyle{
  display: flex;
  flex-direction: column;
  padding-top: 10px;
  padding-bottom: 10px;
  font-size: 16px;
  margin-left: 10px;
  margin-right: 10px;
  border-bottom: 1px solid #494949
}


.listtop {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.listUserName {
  font-size: 12px;
  color: #C1C1C1;
  text-align: center
}

.listtopimage{
  width: 15px;
  height: 15px;
  border-radius: 50%;
  margin-right: 5px;
}

.listtoptime{
  position: absolute;
  right: 10px;
  text-align: right;
  color: #C1C1C1;
  font-size: 12px;
}

.title{
  color: white;
  font-size: 14px;
  margin-top: 3px;
  margin-bottom: 1px;
}

.desc{
  color: #C1C1C1;
  font-size: 12px;
  margin-top: 1px;
  margin-bottom: 2px;
  overflow: hidden;
  width: 100%;
  height: 15px;
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.chapterName{
  font-size: 9px;
  color: white;
  margin-top: 4px;
}

.collect{
  width: 15px;
  height: 15px;
  padding: 10px;
  position: absolute;
  right: 0px;
}